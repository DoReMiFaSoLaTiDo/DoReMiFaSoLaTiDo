- model_class = Album
.page-header
  h1=t '.title', :default => model_class.model_name.human.titleize

p
  strong= model_class.human_attribute_name(:name) + ':'
  br
  = @album.name
p
  strong= model_class.human_attribute_name(:cover_art) + ':'
  br
  = @album.cover_art
p
  strong= model_class.human_attribute_name(:publisher_id) + ':'
  br
  = @album.publisher_id
p
  strong= model_class.human_attribute_name(:released_on) + ':'
  br
  = @album.released_on

= link_to t('.back', :default => t("helpers.links.back")), albums_path, :class => 'btn btn-default'
'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_album_path(@album), :class => 'btn btn-default'
'
= link_to t('.destroy', :default => t("helpers.links.destroy")), album_path(@album), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
